{
    "name": "uv Python Tool",
    "id": "uv",
    "version": "1.0.0",
    "description": "Installs the uv Python package manager globally",
    "options": {},
    "documentationURL": "https://github.com/ekilmer/devcontainer-features/tree/main/src/uv",
    "licenseURL": "https://github.com/ekilmer/devcontainer-features/blob/main/LICENSE",
    "containerEnv": {
        "PATH": "/home/vscode/.local/bin:${PATH}"
    },
    "mounts": [
        {
            "source": "uv-cache-${devcontainerId}",
            "target": "/home/vscode/.cache/uv",
            "type": "volume"
        }
    ],
    "postAttachCommand": "if [ -d /home/vscode/.cache/uv ] && id vscode >/dev/null 2>&1; then sudo chown -R vscode:vscode /home/vscode/.cache/uv; fi",
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
